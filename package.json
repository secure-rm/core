{
  "name": "secure-rm",
  "version": "4.0.0",
  "description": "Completely erases files by making recovery impossible.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run lint && npm run build-ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "standard \"**/*.{js,ts}\" --fix --env jest",
    "coverage": "jest --coverage --coverageDirectory=./coverage",
    "test": "jest --verbose",
    "watch-test": "npm run test -- --watchAll",
    "clean": "rimraf dist coverage node_modules",
    "prepack": "npm i && npm run clean && npm run build"
  },
  "dependencies": {
    "rimraf": "^3.0.0",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "@types/node": "^12.11.7",
    "@types/rimraf": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "jest": "^24.9.0",
    "standard": "^14.3.1",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4",
    "uuid": "^3.3.3"
  },
  "author": "Oganexon @oganexon",
  "bugs": "https://github.com/secure-rm/core/issues",
  "homepage": "https://www.secure-rm.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/secure-rm/core.git"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/dist",
    "/bin"
  ],
  "keywords": [
    "privacy",
    "secure",
    "data erasure",
    "file deletion",
    "remove",
    "delete",
    "wipe out",
    "clean",
    "erase",
    "shred",
    "overwrite",
    "glob"
  ],
  "license": "MIT",
  "standard": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
